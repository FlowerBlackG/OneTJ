<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="#80FAF8FF"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="下课"
            android:textColor="#FF2B2D30"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/widget_course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="黄泽华"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="114-514"
            android:textColor="@color/design_default_color_primary_variant"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/widget_course_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宿舍"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_course_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="qwq"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>
